%div.signature
  = form_for @signature, :url => {:action => 'create'}, :html => {:class => 'form-horizontal', :role => 'form'} do |f|
    %div.control-group
      = f.label :first_name, :class => 'control-label'
      %div.controls
        = f.text_field :first_name
        - unless @signature.errors[:first_name].empty?
          %span.error
            First name
            = @signature.errors[:first_name].first
    %div.control-group
      = f.label :last_name, :class => 'control-label'
      %div.controls
        = f.text_field :last_name
        - unless @signature.errors[:last_name].empty?
          %span.error
            Last name
            = @signature.errors[:last_name].first
    %div.control-group
      = f.label :email, :class => 'control-label'
      %div.controls
        = f.text_field :email
        - unless @signature.errors[:email].empty?
          %span.error
            Email
            = @signature.errors[:email].first
    %div.control-group
      = f.label :town, :class => 'control-label'
      %div.controls
        = f.select :town, [['Durham', 'Durham'], ['Lee', 'Lee'], ['Madbury', 'Madbury'], ['Other', 'Other']]
        - unless @signature.errors[:town].empty?
          %span.error
            Town
            = @signature.errors[:town].first
    %div.control-group
      %div.controls= f.submit 'Sign!', :class => 'btn btn-default'
