%div.signature
  = form_for @signature, :url => {:action => 'create'}, :html => {:class => 'form-horizontal', :role => 'form'} do |f|
    %div.control-group
      = f.label :first_name, :class => 'control-label'
      %div.controls= f.text_field :first_name
    %div.control-group
      = f.label :last_name, :class => 'control-label'
      %div.controls= f.text_field :last_name
    %div.control-group
      = f.label :email, :class => 'control-label'
      %div.controls= f.text_field :email
    %div.control-group
      = f.label :town, :class => 'control-label'
      %div.controls= f.select :town, [['Durham', 'Durham'], ['Lee', 'Lee'], ['Madbury', 'Madbury'], ['Other', 'Other']]
    %div.control-group
      = f.label :is_visible, 'Display on website', :class => 'control-label'
      %div.controls= f.check_box :is_visible
    %div.control-group
      = f.label :can_email, 'Send updates', :class => 'control-label'
      %div.controls= f.check_box :can_email
    %div.control-group
      %div.controls= f.submit 'Sign!', :class => 'btn btn-default'
