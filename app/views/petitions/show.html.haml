=render :partial => 'petition'
%h3.text-center Signatures
%div.row
  %div.span5.offset1
    - @signatures.each_with_index do |signature, index|
      - next if index.odd?
      = render :partial => 'signatures/signature', :locals => {:signature => signature}
  %div.span5
    - @signatures.each_with_index do |signature, index|
      - next if index.even?
      = render :partial => 'signatures/signature', :locals => {:signature => signature}
%div.row
  %div.span12
    %div.count
      %p.text-center
        %span.count
          Durham:
          = @signatures.where(:town => 'Durham').count
        %span.count
          Lee:
          = @signatures.where(:town => 'Lee').count
        %span.count
          Madbury:
          = @signatures.where(:town => 'Madbury').count
        %span.count
          Other:
          = @signatures.where(:town => 'Other').count
%div.row
  %div.span12
    %div.petition-cta
      %p.text-center
        %a{:href => new_petition_signature_path}
          %button.btn.btn-large.btn-primary{:type => 'button'} Sign the Petition!
